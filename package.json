{
  "author": "George Madeley",
  "description": "A series of tools and scripts to aid in software development",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "keywords": [
    "tools"
  ],
  "license": "ISC",
